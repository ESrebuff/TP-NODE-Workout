<%- include('layouts/head') -%>

<div class="ftco-blocks-cover-1">
  <div class="site-section-cover overlay" data-stellar-background-ratio="0.5"
    style="background-image: url('images/hero_1.jpg')">
    <div class="container">
      <div class="row align-items-center justify-content-center text-center">
        <div class="col-md-7">
          <h1 class="mb-3">Crée un compte</h1>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="site-section bg-light" id="contact-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 m-auto mb-5">
        <form action="/register" method="post">
          <% if (user) { %>
            <p class="text-danger text-center"><%= user %></p>
          <% } %>
          <div class="form-group row">
            <div class="col-md-12">
              <input name="pseudo" type="text" class="form-control" placeholder="Pseudo">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <input name="mail" type="email" class="form-control" placeholder="Email">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <input name="pdw" type="password" class="form-control" placeholder="Mot de passe">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <input name="pdwv" type="password" class="form-control" placeholder="Validation de mot de passe">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-6 m-auto">
              <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="Crée un compte">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
</div>
<a href="/connect/admin">Admin ?</a>
<%- include('layouts/script') -%>